# FIXME: rewrite this (python ?) !
# FIXME: check that iconv is available, or fallback to tr

addtime () {
    while read line; do
	output=`echo $line | iconv -c -f utf-8 -t utf-8 -`
	if [ "$?" -ne "0" ]; then
		output=`echo $line | iconv -c -f 8859_1 -t utf-8 -`
	fi
	echo "`date +%H:%M:%S.%N` $1: $output"
    done    
}       

OUT=`mktemp /tmp/annotate.XXXXXX` || exit 1
ERR=`mktemp /tmp/annotate.XXXXXX` || exit 1

rm -f $OUT $ERR
mkfifo $OUT $ERR || exit 1

addtime O < $OUT &
addtime E < $ERR &

echo "`date +%H:%M:%S.%N` C: $@"
"$@" > $OUT 2> $ERR ; EXIT=$?
rm -f $OUT $ERR
wait

echo "`date +%H:%M:%S.%N` X: exitcode $EXIT"

exit $EXIT

