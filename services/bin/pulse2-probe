$ret = 0;
$pid = open(PIPE, "ssh -tt -o StrictHostKeyChecking=no -o Batchmode=yes root@".$ARGV[0]." 'echo \$OS;uname' |") or die $!;
eval {
    local $SIG{ALRM} = sub { die "TIMEDOUT" };
    alarm(10);
    while(<PIPE>) { print $_; };
    $ret = close(PIPE);
    alarm(0);
};
if ($@) {
    die $@ unless $@ =~ /TIMEDOUT/;
    kill 9, $pid;
    $ret = close(PIPE);  ## needed??
    $? ||= 9;
}
if (not $ret) {
    print "FAILED\n";
}
exit not $ret;
