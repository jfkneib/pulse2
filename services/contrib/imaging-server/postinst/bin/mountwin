#!/bin/sh
#
# NTFS / VFAT Mounting $Id$
#

cd /opt
insmod ./lib/modules/fuse.ko

image=$1

# try a VFAT mount
mount -t vfat $image /mnt 2>/dev/null && echo "*** $image mounted (vfat) ***" && exit 0

export PATH=$PATH:`pwd`/bin
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:`pwd`/lib/

ntfs-3g $image /mnt

echo "*** $image mounted ***"
