#!/bin/sh
#
# Launch initial install script
#

# Functions which can be intersting in the postinst scripts

. /opt/lib/libpostinst.sh

# 1st execute the global preinst
if [ -r /revoinfo/initinst ] ;then
    echo "*** Executing global initinst script ***"
    /bin/revosendlog 6
    . /revoinfo/initinst
    /bin/revosendlog 7
fi

if grep -q revosavedir /proc/cmdline ;then
    # then the local image postinst
    if [ -r /revosave/initinst ] ;then
	echo "*** Executing local image initinst script ***"
	/bin/revosendlog 6
	. /revosave/initinst
	/bin/revosendlog 7
    fi
fi
