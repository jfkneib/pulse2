# Redhat based distributions specific
# chkconfig: 345 40 60
# description: Pulse2 Launchers

# Variables
DESC="Pulse2 launchers" 
DAEMON="##SBINDIR##/pulse2-launchers-manager"

# Function to start daemon
start () {
	echo -n "Starting ${DESC} : "
	# Start manager
	${DAEMON} start >/dev/null 2>&1
	RETVAL=$?
	# If return code is 0, everything went fine
	if [ ${RETVAL} -eq 0 ]
	  then
	    echo "done."
	  else
	    echo "failed."
	fi
	return ${RETVAL}
}

# Function to stop daemon
stop () {
	echo -n $"Stopping ${DESC} : "
	# Stop manager
	${DAEMON} stop >/dev/null 2>&1
	# If return code is 0, everything went fine
	RETVAL=$?
	if [ ${RETVAL} -eq 0 ]
	  then
	    echo "done."
	  else
	    echo "failed."
	fi
	return ${RETVAL}
}

# Function to restart (run stop, then start)
restart() {
	stop
	sleep 1
	start
}

case $1 in
	start)
		start
	;;
	stop)
		stop
	;;
	restart | force-reload)
		restart
	;;
	*)

	echo "Usage: ${0} {start|stop|restart|force-reload}"
	exit 1
esac

exit ${RETVAL}
